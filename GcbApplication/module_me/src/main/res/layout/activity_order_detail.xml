<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.gocashback.lib_common.widget.GcbHeadView
        android:id="@+id/gcbHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hv_center_text="@string/order_detail"
        app:layout_constraintTop_toTopOf="parent">

    </com.gocashback.lib_common.widget.GcbHeadView>

    <com.gocashback.lib_common.widget.GcbSimpeInfoTextview
        android:id="@+id/gsitv_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gsitv_text="@string/order_detail_order_id"
        app:layout_constraintTop_toBottomOf="@+id/gcbHeadView">

    </com.gocashback.lib_common.widget.GcbSimpeInfoTextview>

    <com.gocashback.lib_common.widget.GcbSimpeInfoTextview
        android:id="@+id/gsitv_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gsitv_text="@string/order_detail_store"
        app:layout_constraintTop_toBottomOf="@+id/gsitv_order_id">

    </com.gocashback.lib_common.widget.GcbSimpeInfoTextview>

    <com.gocashback.lib_common.widget.GcbSimpeInfoTextview
        android:id="@+id/gsitv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gsitv_text="@string/order_detail_amount"
        app:layout_constraintTop_toBottomOf="@+id/gsitv_store">

    </com.gocashback.lib_common.widget.GcbSimpeInfoTextview>

    <com.gocashback.lib_common.widget.GcbSimpeInfoTextview
        android:id="@+id/gsitv_rebate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gsitv_text="@string/order_detail_cash_back"
        app:layout_constraintTop_toBottomOf="@+id/gsitv_amount">

    </com.gocashback.lib_common.widget.GcbSimpeInfoTextview>

    <com.gocashback.lib_common.widget.GcbSimpeInfoTextview
        android:id="@+id/gsitv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gsitv_text="@string/order_detail_date"
        app:layout_constraintTop_toBottomOf="@+id/gsitv_rebate">

    </com.gocashback.lib_common.widget.GcbSimpeInfoTextview>

    <com.gocashback.lib_common.widget.GcbSimpeInfoTextview
        android:id="@+id/gsitv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gsitv_text="@string/order_detail_status"
        app:layout_constraintTop_toBottomOf="@+id/gsitv_date">

    </com.gocashback.lib_common.widget.GcbSimpeInfoTextview>

    <View
        style="@style/CommonTabUnderShadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gcbHeadView" />

</android.support.constraint.ConstraintLayout>