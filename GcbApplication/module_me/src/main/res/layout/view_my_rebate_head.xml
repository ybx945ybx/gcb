<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_available_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/redFF4E4E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/available"
        app:layout_constraintEnd_toStartOf="@+id/view_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_center"
        tools:text="665.33" />

    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/withdraw_available"
        android:textColor="@color/grey999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_center"
        app:layout_constraintEnd_toStartOf="@+id/view_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_available_count" />


    <View
        android:id="@+id/view_center"
        android:layout_width="1dp"
        android:layout_height="38dp"
        android:background="@color/greyDEDEDE"
        app:layout_constraintBottom_toTopOf="@+id/view_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"/>

    <TextView
        android:id="@+id/tv_pending_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey333333"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/available"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_center"
        app:layout_constraintTop_toTopOf="@+id/view_center"
        tools:text="665.33" />

    <TextView
        android:id="@+id/pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/withdraw_pending"
        android:textColor="@color/grey999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_center"
        app:layout_constraintTop_toBottomOf="@+id/tv_pending_count" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/greyF5F5F5"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>