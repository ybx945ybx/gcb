<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_greye6e6e6_corner_6_store"
        android:gravity="center_vertical"
        android:hint="@string/payment_method_ali"
        android:maxLines="1"
        android:singleLine="true"
        android:minHeight="40dp"
        android:paddingStart="16dp"
        android:textColor="@color/grey333333"
        android:textColorHint="@color/grey999999"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/grey1D1D1F"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="alipay" />

    <TextView
        android:id="@+id/disable_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_greye6e6e6_corner_6_store"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:minHeight="40dp"
        android:paddingStart="16dp"
        android:textColor="@color/grey999999"
        android:textColorHint="@color/grey999999"
        android:textCursorDrawable="@null"
        android:text="@string/edit_payment_method_paypal_area_hint"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />
</android.support.constraint.ConstraintLayout>