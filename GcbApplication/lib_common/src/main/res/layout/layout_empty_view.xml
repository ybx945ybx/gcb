<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <!-- 为空信息 -->
    <TextView
        android:id="@+id/tv_empty_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_default_no_data"
        android:gravity="center_horizontal"
        android:text="@string/msv_no_content"
        android:textColor="@color/redFF4E4E"
        android:textSize="15sp" />

    <!-- 刷新 -->
    <TextView
        android:id="@+id/empty_retry_view"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_redff4e4e_corner_circle"
        android:gravity="center"
        android:text="@string/msv_empty_retry"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />
