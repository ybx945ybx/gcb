<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.gocashback.lib_common.widget.GcbImageView
            android:id="@+id/iv_discover_cover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/grey212121"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="343:173"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <TextView
            android:id="@+id/tv_discover_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_discover_cover"
            app:layout_constraintRight_toRightOf="@+id/iv_discover_cover"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            tools:text="邀请好友" />

        <TextView
            android:id="@+id/tv_discover_desc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/iv_discover_cover"
            app:layout_constraintRight_toRightOf="@+id/iv_discover_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_discover_title"
            tools:text="您的好友将得到$5注册奖励
您还可以获得好友第一年购物返利金额的5%
作为额外奖励" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>