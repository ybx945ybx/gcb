<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="116dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/bg_welfare_task">

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:maxLines="2"
        android:textColor="@color/grey333333"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="完成一次下单获得一次购物返利" />

    <TextView
        android:id="@+id/tv_task_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:maxLines="2"
        android:textColor="@color/grey999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="去完成" />

    <ImageView
        android:id="@+id/iv_task_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_task_go"
        app:layout_constraintBottom_toBottomOf="@+id/tv_task_finish"
        app:layout_constraintStart_toEndOf="@+id/tv_task_finish"
        app:layout_constraintTop_toTopOf="@+id/tv_task_finish" />

    <ImageView
        android:id="@+id/iv_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_welfare_invite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/iv_task_foreground"
        android:layout_width="0dp"
        android:layout_height="116dp"
        app:layout_constraintDimensionRatio="153:116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_welfare_foreground"
        android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>